{
  "name": "lama2",
  "displayName": "Lama2",
  "description": "Nifty VSCode UI for Lama2, the plain-text powered API client",
  "version": "3.7.3",
  "publisher": "Hexmos",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "lama2.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/HexmosTech/VSCodeLama2"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "languages": [
    {
      "id": "lama2",
      "extensions": [
        ".l2",
        ".lama2"
      ],
      "aliases": [
        "lama2",
        "l2"
      ]
    }
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:http",
    "onLanguage:lama2"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "resources": [
      {
        "path": "webview/build/assets",
        "scheme": "vscode-resource"
      }
    ],
    "languages": [
      {
        "id": "lama2",
        "extensions": [
          ".l2",
          ".lama2"
        ],
        "aliases": [
          "lama2",
          "l2"
        ]
      }
    ],
    "grammars": [
      {
        "language": "lama2",
        "scopeName": "source.lama2",
        "path": "./syntaxes/lama2.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "lama2.ExecuteCurrentFile",
        "title": "Lama2: Execute Current File"
      },
      {
        "command": "lama2.GenerateCodeSnippet",
        "title": "Lama2: Generate Code Snippet"
      },
      {
        "command": "lama2.PrettifyCurrentFile",
        "title": "Lama2: Prettify Current File JSON"
      },
      {
        "command": "lama2.GetRemoteURL",
        "title": "Lama2: Get Remote Git URL"
      },
      {
        "command": "lama2.Lama2Examples",
        "title": "Lama2: Request Examples"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd webview && npm install",
    "start:webview": "cd webview && npm run start",
    "build:webview": "cd webview && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "ansi-to-html": "^0.7.2",
    "chokidar": "^3.5.3",
    "json2html": "^0.0.8",
    "semver": "^7.6.3",
    "simple-git": "^3.17.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/semver": "^7.5.8",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
